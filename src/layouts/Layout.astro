---
// import { ViewTransitions } from 'astro:transitions'

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

import '../styles/tailwind.css'
import '../styles/global.css'

export interface Props {
	button?: string
	dark?: boolean
	footer?: boolean
	header?: boolean
	title?: string
}

const { button, dark, footer, header, title } = Astro.props as Props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<!-- Todo: Change before publication  -->
		<meta name='robots' content='noindex' />
		<meta name='googlebot' content='noindex' />
		<meta name='googlebot-news' content='nosnippet' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<meta charset='UTF-8' />
		<link rel='shortcut icon' href='/favicon.ico' />
		<link rel='icon' type='image/x-icon' href='/favicon.ico' />
		<title>{title || 'The New Humanitarian'}</title>
		<!-- To do: Google Tag Manager -->
		<!-- <ViewTransitions /> -->
		<!-- To do: Create SEO component for more meta tags -->
	</head>
	<body>
		<!-- Header  -->
		{header && <Header dark={dark} button={button} />}
		<!-- Main content -->
		<slot />
		<!-- Footer  -->
		{footer && <Footer />}
	</body>
</html>

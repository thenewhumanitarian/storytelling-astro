---
import Header from '../components/Header.astro'

import '../styles/tailwind.css'
import '../styles/global.css'

export interface Props {
	title?: string
}

const { title } = Astro.props as Props
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<!--  Importing fonts here for pre-loading -->
		<link href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=block' rel='stylesheet' />
		<link rel='preload' as='font' href='/fonts/GT-Sectra-Fine-Bold.woff' />
		<link rel='preload' as='font' href='/fonts/GT-Sectra-Fine-Medium.woff' />
		<link rel='preload' as='font' href='/fonts/GT-Sectra-Fine-Regular.woff' />
		<title>{title || 'The New Humanitarian'}</title>
		<!-- To do: Google Tag Manager -->
	</head>
	<body>
		<!-- Header  -->
		<Header />
		<!-- Main content -->
		<slot />
		<!-- Footer  -->
	</body>
</html>

---
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'
const { title } = Astro.props
import '../styles/global.css'
---

<html lang='en'>
  <head>
    <title>{title}</title>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
  </head>
  <body>
    <Header title={title} />
    <article>
      <slot />
    </article>
    <Footer />
  </body>
</html>
